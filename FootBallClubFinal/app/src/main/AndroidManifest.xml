<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madukubah.alan.footballclubfinal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoTitleBar">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.match.activity.DetailMatchActivity"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.team.activity.DetailTeamsActivity"
            android:label="@string/title_activity_detail_teams"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.team.activity.DetailPlayersActivity"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".DataActivity"></activity>
    </application>

</manifest>